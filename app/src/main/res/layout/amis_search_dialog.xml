<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/black">

        <EditText
            android:id="@+id/actionbar_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:layout_toStartOf="@+id/action_bar_cancel_search"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:padding="5dp"
            android:hint="Rechercher des amis"
            android:drawableEnd="@drawable/clear_cross"/>

        <Button
            android:id="@+id/action_bar_cancel_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="Annuler"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/search_friends_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>