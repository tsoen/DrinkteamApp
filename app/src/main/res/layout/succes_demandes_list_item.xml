<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/succes_line_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/succes_images_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_niveau"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/icon_succes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/succes_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/succes_images_layout"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/nom_succes"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/descrip_succes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nom_succes" />

        <Button
            android:id="@+id/succes_demande_accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/descrip_succes"
            android:padding="5dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_alignParentEnd="true"
            android:text="OK"/>

        <Button
            android:id="@+id/succes_demande_refuse_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/succes_demande_accept_button"
            android:text="KO"/>

    </RelativeLayout>


</RelativeLayout>