<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/jeu_line_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/nom_jeu"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0sp"/>

    <ImageView
        android:id="@+id/icon_jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/joueurs_jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_jeu" />

    <ImageView
        android:id="@+id/separateur"
        android:src="@android:drawable/divider_horizontal_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joueurs_jeu"
        android:scaleType="fitXY"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"/>



</RelativeLayout>