<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/palier_succes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/succes_images_layout" />

    <TextView
        android:id="@+id/anecdote_succes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/palier_succes" />
    
    <Button
        android:id="@+id/nouvelle_demande_succes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faire une demande"
        android:layout_below="@id/anecdote_succes"
        android:layout_alignStart="@id/palier_succes"/>

</RelativeLayout>